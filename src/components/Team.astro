---
import { UserRound, Stethoscope } from 'lucide-react';

const team = [
  {
    name: 'Hubert Leufkens',
    role: 'Facharzt für Allgemeinmedizin',
    specialties: ['Hausärztliche Versorgung']
  },
  {
    name: 'Dr. med. Ulrike Ismer-Leufkens',
    role: 'Fachärztin für Allgemeinmedizin',
    specialties: ['Diabetologin DDG', 'Sonographie']
  },
  {
    name: 'Friederike Nickel',
    role: 'Ärztin',
    specialties: ['Allgemeinmedizin']
  }
];
---

<section id="team" class="py-20 bg-stone-50 relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-teal-100/50 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-80 h-80 bg-stone-200/50 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <span class="text-teal-600 font-bold uppercase tracking-wider text-sm">Unser Team</span>
      <h2 class="text-3xl font-bold text-teal-900 font-heading sm:text-4xl mt-2">Kompetenz & Herz</h2>
      <p class="mt-4 text-xl text-stone-600 max-w-2xl mx-auto">
        Wir sind ein eingespieltes Team und kümmern uns gemeinsam um Ihre Gesundheit.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {team.map((member) => (
        <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 border border-stone-100 group">
          <div class="h-48 bg-gradient-to-br from-teal-50 to-stone-100 flex items-center justify-center relative overflow-hidden">
             <div class="absolute inset-0 bg-teal-600/5 group-hover:bg-teal-600/10 transition-colors"></div>
             <div class="w-24 h-24 bg-white rounded-full flex items-center justify-center shadow-sm text-teal-600 z-10 group-hover:scale-110 transition-transform duration-300">
                <UserRound size={48} strokeWidth={1.5} />
             </div>
          </div>
          
          <div class="p-8 text-center relative">
            <div class="absolute -top-6 left-1/2 -translate-x-1/2 bg-teal-600 text-white p-2 rounded-full shadow-md">
                <Stethoscope size={20} />
            </div>
            
            <h3 class="text-xl font-bold text-teal-900 font-heading mb-2 mt-2">{member.name}</h3>
            <p class="text-teal-700 font-medium mb-4">{member.role}</p>
            
            <div class="flex flex-wrap justify-center gap-2">
              {member.specialties.map((specialty) => (
                <span class="inline-block bg-stone-50 text-stone-600 px-3 py-1 rounded-full text-xs font-medium border border-stone-200">
                  {specialty}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
