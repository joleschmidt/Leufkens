---
import { Quote } from 'lucide-react';

const testimonials = [
  {
    text: "Ein Hausarzt, wie man besser keinen finden kann! Immer freundlich, kann gut zuhören und ist fachlich sehr kompetent. Das ganze Team ist top.",
    author: "Patient auf jameda"
  },
  {
    text: "Er ist sehr fürsorglich, nimmt sich Zeit für Jung und Alt und geht auf jeden Patienten ein. Bei allgemeinen Erkrankungen wurde ich immer professionell behandelt.",
    author: "Patientin auf jameda"
  },
  {
    text: "Unser Ziel ist es, Sie medizinisch kompetent und menschlich zugewandt zu betreuen.",
    author: "Praxis-Leitbild",
    isPraxis: true
  }
];
---

<section class="py-20 bg-teal-800 text-white relative overflow-hidden">
    <!-- Decorative Pattern -->
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 30px 30px;"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-white font-heading sm:text-4xl">Das sagen unsere Patienten</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {testimonials.map((t) => (
                <div class={`rounded-2xl p-8 relative ${t.isPraxis ? 'bg-teal-700/50 border border-teal-500' : 'bg-white/10 backdrop-blur-sm border border-teal-600'}`}>
                    <Quote className="text-teal-300 w-8 h-8 mb-4 opacity-50" />
                    <p class="text-lg mb-6 italic text-teal-50 leading-relaxed">
                        "{t.text}"
                    </p>
                    <div class="font-medium text-teal-200">
                        — {t.author}
                    </div>
                </div>
            ))}
        </div>
        
        <div class="mt-12 text-center max-w-2xl mx-auto">
             <p class="text-teal-200 text-sm">
                Basierend auf authentischen Bewertungen auf jameda.de und Google.
            </p>
        </div>
    </div>
</section>
