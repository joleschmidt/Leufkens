---
import { Stethoscope, Activity, Syringe, HeartPulse, Baby, ClipboardList } from 'lucide-react';

const services = [
  {
    title: 'Hausärztliche Versorgung',
    description: 'Umfassende Betreuung bei akuten und chronischen Erkrankungen für die ganze Familie.',
    icon: Stethoscope
  },
  {
    title: 'Diabetologie',
    description: 'Spezialisierte Schwerpunktpraxis für Typ 1 und Typ 2 Diabetiker (DDG zertifiziert). Beratung, Schulung und Einstellung.',
    icon: Activity,
    highlight: true
  },
  {
    title: 'Vorsorge & Check-ups',
    description: 'Gesundheitsuntersuchungen (Check-up 35+), Krebsvorsorge und Hautkrebsscreening.',
    icon: ClipboardList
  },
  {
    title: 'Ultraschall (Sonographie)',
    description: 'Moderne Diagnostik der Bauchorgane und der Schilddrüse.',
    icon: HeartPulse
  },
  {
    title: 'Impfungen',
    description: 'Alle Standardimpfungen gemäß STIKO sowie Reiseimpfberatung.',
    icon: Syringe
  },
  {
    title: 'Jugendschutzuntersuchungen',
    description: 'Vorsorgeuntersuchungen für Jugendliche (J1) und Jugendarbeitsschutzuntersuchungen.',
    icon: Baby
  }
];
---

<section id="leistungen" class="py-16 md:py-24 bg-teal-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-teal-900 font-heading sm:text-4xl">Unsere Leistungen</h2>
      <p class="mt-4 text-xl text-stone-600 max-w-2xl mx-auto">
        Wir bieten Ihnen ein breites Spektrum der Allgemeinmedizin und spezialisierte Leistungen.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class={`rounded-xl p-8 shadow-sm hover:shadow-md transition-all duration-300 border group relative overflow-hidden ${
            service.highlight 
            ? 'bg-teal-900 border-teal-700 text-white transform md:-translate-y-2 md:shadow-2xl ring-4 ring-teal-500/20' 
            : 'bg-white border-stone-100'
        }`}>
          {service.highlight && (
              <div class="absolute top-0 right-0 bg-teal-500 text-xs font-bold px-2 py-1 text-white rounded-bl-lg">
                  Schwerpunkt
              </div>
          )}
          
          <div class={`w-12 h-12 rounded-lg flex items-center justify-center mb-6 transition-colors ${
              service.highlight 
              ? 'bg-white/10 text-teal-300 group-hover:bg-white/20 group-hover:text-white'
              : 'bg-teal-100 text-teal-600 group-hover:bg-teal-600 group-hover:text-white'
          }`}>
            <service.icon size={24} />
          </div>
          
          <h3 class={`text-xl font-bold mb-3 font-heading ${
              service.highlight ? 'text-white' : 'text-teal-900'
          }`}>{service.title}</h3>
          
          <p class={`leading-relaxed ${
              service.highlight ? 'text-teal-100' : 'text-stone-600'
          }`}>
            {service.description}
          </p>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
        <p class="text-stone-500 text-sm">
            Dies ist ein Auszug unseres Leistungsspektrums. Bitte sprechen Sie uns an, wenn Sie Fragen zu speziellen Untersuchungen haben.
        </p>
    </div>
  </div>
</section>
